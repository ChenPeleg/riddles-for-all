{
  "name": "riddles",
  "version": "1.0.0",
  "type": "module",
  "description": "A TypeScript-based riddle management system for extracting and searching riddles from various book formats",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "backend:build": "tsc",
    "backend:dev": "tsx backend/index.ts",
    "backend:watch": "nodemon --exec tsx backend/index.ts",
    "backend:extract": "tsx backend/scripts/extract-and-import.ts",
    "backend:parse": "tsx backend/scripts/parse-and-store.ts",
    "backend:sample": "tsx backend/scripts/generate-sample-data.ts",
    "backend:merge": "tsx backend/scripts/merge-riddles.ts",
    "cli": "tsx backend/cli/index.ts",
    "search": "npm run cli search",
    "riddles": "npm run cli"
  },
  "keywords": [
    "riddles",
    "typescript",
    "text-extraction",
    "react",
    "vite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.0.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "commander": "^11.0.0",
    "epubjs": "^0.3.0",
    "jszip": "^3.10.1",
    "nodemon": "^3.0.0",
    "pdf-parse": "^1.1.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.1"
  }
}
